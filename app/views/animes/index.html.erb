<h1>Anime List</h1>

<%= link_to "Search Anime", search_animes_path, class: "btn btn-primary mb-3" %>

<div class="row">
  <% @animes.each do |anime| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if anime.image_url %>
          <%= image_tag anime.image_url, class: "card-img-top", style: "height: 300px; object-fit: cover;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= anime.title %></h5>
          <p class="card-text">
            <small class="text-muted">
              Score: <%= anime.score || 'N/A' %> |
              Episodes: <%= anime.episodes || 'N/A' %> |
              Status: <%= anime.status %>
            </small>
          </p>
          <p class="card-text"><%= truncate(anime.synopsis, length: 100) %></p>
          <%= link_to "View Details", anime_path(anime), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @animes.empty? %>
  <p>No anime found. <%= link_to "Search for anime", search_animes_path %> to get started!</p>
<% end %>