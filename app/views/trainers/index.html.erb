<h1 class="text-center mt-4">All Trainers</h1>

<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @trainers %>
  </div>
  <%= will_paginate @trainers, :container => false %>
</div>

<div class="container">
  <% @trainers.each do |trainer| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to trainer.name, trainer_path(trainer) %></h5>
            <p class="card-text"><%= pluralize(trainer.users.count, "client") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created <%= time_ago_in_words(trainer.created_at) %> ago,
              edited <%= time_ago_in_words(trainer.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @trainers %>
  </div>
  <%= will_paginate @trainers, :container => false %>
</div>