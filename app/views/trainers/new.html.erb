<h1 class="text-center mt-4">Add a New Trainer</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @trainer %>
      <%= form_with(model: @trainer, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-3 align-items-center justify-content-center">
          <%= f.label :name, "Trainer Name", class: "col-2 col-form-label text-black mb-0 text-right" %>
          <div class="col-8">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <div class="col-10 text-center">
            <%= f.submit class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-10 text-center">
      <%= link_to 'Cancel and return to Goals listing', goals_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>