<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Goals</h3>

<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @goals %>
  </div>
  <%= will_paginate @goals, :container => false %>
</div>

