<h1 class="text-center mt-4">All Goals</h1>
<div class="container">
  <% @goals.each do |goal| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= goal.user.username if goal.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to goal.name, goal_path(goal) %></h5>
            <p class="card-text"><%= goal.sport %></p>
            <div class="btn-group" role="group">
              <%= link_to "View", goal_path(goal), class: "btn btn-outline-primary" %>
              <%= link_to "Edit", edit_goal_path(goal), class: "btn btn-outline-secondary" %>
              <%= button_to "Delete", goal_path(goal), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created <%= time_ago_in_words(goal.created_at) %> ago, edited <%= time_ago_in_words(goal.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<p><%= link_to 'Create new goal', new_goal_path %></p>