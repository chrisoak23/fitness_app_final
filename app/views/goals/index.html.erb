<h1>Goals Listing Page</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Sport</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.name %></td>
      <td><%= goal.sport %></td>
      <td><%= link_to 'Show', goal_path(goal) %></td>
      <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
      <td><%= link_to "Delete", goal_path(goal), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new goal', new_goal_path %></p>
